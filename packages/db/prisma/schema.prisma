model Message {
  id        String   @id @default(cuid())
  message   String
  createdAt DateTime @default(now())
  
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  room      Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId    String

  @@map("messages")
}

enum RoomMemberRole {
  ADMIN
  MEMBER
}

enum ShapeType {
  RECTANGLE
  DIAMOND
  ELLIPSE
  LINE
  ARROW
  FREEDRAW
  TEXT
  IMAGE
}